= devise_error_messages!
%h2.page-header Forgot your password?
= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, class: "well" }) do |f|
  %div
    = f.label :email
    %br/
    = f.email_field :email, :autofocus => true
  .form-actions= f.submit "Send me reset password instructions", class: "btn"
= render "devise/shared/links"

