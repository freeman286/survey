.container
  - flash.each do |type, message|
    %div{class: "alert alert-block #{flash_class type}"}
      %button.close{"data-dismiss" => "alert"} x
      %h4= flash_header message
      %div= message

  = devise_error_messages!
  .row
    .span6
      %h2 Sign up
      %p Create a new account
      = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: 'form-vertical well' }) do |f|
        = f.input :first_name, input_html: { class: 'input-xlarge' }
        = f.input :last_name, input_html: { class: 'input-xlarge' }
        = f.input :email, input_html: { class: 'input-xlarge' }
        = f.input :password, input_html: { class: 'input-xlarge', autocomplete: 'off' }
        = f.input :password_confirmation, input_html: { class: 'input-xlarge', autocomplete: 'off' }
        .form-actions
          = f.submit "Sign up", class: 'btn btn-primary'
          %br/
    .span2
    .span4
      %h2 Sign in
      %p I already have an account
      = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: "well form-vertical"}) do |f|
        %fieldset
          = f.input :email
          = f.input :password
          - if devise_mapping.rememberable?
            = f.input :remember_me, as: :boolean, inline_label: "Remember Me", label: false
          .form-actions
            = f.button :submit, "Sign In", class: 'btn btn-primary'
      = render "devise/shared/links"


