<%= simple_form_for(@question) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <input type='hidden' name='question[segment_id]' value = '<%= @question.segment.id %>'>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
