<% if @question.errors.any? %>
<div class="alert alert-danger">
  <button class="close" data-dismiss="alert">x</button>
  <h3><%= pluralize(@question.errors.count, "error") %> prevented this question from being saved:</h3>
  <ul>
	  <% @question.errors.full_messages.each do |msg| %>
	  <li><%= msg %></li>
    <% end %>
</ul>
</div>
<% end %>

<h2><%= crud_state_to_name(@crud_state) %> question for <%= @question.segment.name %></h2>

<%= simple_form_for(@question, :html => { class: "well" }) do |f| %>

  <div class="form-inputs">
    <%= f.input :name, :input_html => {:rows => 5}  %>
    <input type='hidden' name='question[segment_id]' value = '<%= @question.segment.id %>'>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
