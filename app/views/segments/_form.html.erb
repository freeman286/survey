<%= simple_form_for(@segment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
	<input type='hidden' name='segment[diagnostic_id]' value = '<%= @segment.diagnostic.id %>'>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
